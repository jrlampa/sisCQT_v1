// prisma/schema.desktop.prisma
//
// Schema Prisma para o modo Desktop (offline-first) usando SQLite local.
// Mantém modelos compatíveis com o schema Postgres, mas remove dependências de PostGIS.

generator desktopClient {
  provider      = "prisma-client-js"
  // Gera um client separado para não quebrar o @prisma/client do Postgres.
  output        = "./generated/desktop"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  // Ex.: DESKTOP_DATABASE_URL="file:./.data/siscqt_desktop.db"
  // No Electron, ideal apontar para um caminho no diretório de dados do app.
  url      = env("DESKTOP_DATABASE_URL")
}

model User {
  id               String        @id @default(uuid())
  email            String        @unique
  name             String?
  // SQLite: armazenar enums como String (valores: Free|Pro|Enterprise)
  plan             String        @default("Free")
  // SQLite: armazenar enums como String (valores: ENTRA|GOOGLE)
  authProvider     String        @default("ENTRA")
  stripeCustomerId String?       @unique

  subscriptions Subscription[]
  projects       Project[]
}

model Project {
  id               String   @id @default(uuid())
  name             String
  // SQLite: Json não é suportado pelo Prisma; armazenar JSON serializado.
  metadata         String
  activeScenarioId String
  cables           String
  ipTypes          String
  reportConfig     String
  scenarios        String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id])
  userId           String
}

model Subscription {
  id               String   @id @default(uuid())
  provider         String   // 'stripe'
  status           String
  customerId       String?
  subscriptionId   String?  @unique
  priceId          String?
  currentPeriodEnd DateTime?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NetworkNode {
  id         String    @id @default(uuid())
  name       String
  // SQLite: armazenar enum como String (valores: TRAFO|POSTE)
  type       String
  // PostGIS -> SQLite: substituir geometry por colunas escalares.
  lat        Float
  lng        Float
  // SQLite: Json não é suportado pelo Prisma; armazenar JSON serializado.
  properties String?
  createdAt  DateTime  @default(now())

  @@index([lat, lng])
}

